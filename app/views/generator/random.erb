<div class = "container">
  <h1>YOUR ORIGINAL CHARACTER!</h1>
  <p>Title: <%=$random_character.title%></p>
  <p>Name: <%=$random_character.name%></p>
  <p>Age: <%=$random_character.age%></p>
  <p>Hair Color: <%=$random_character.hair_color%></p>
  <p>Eye Color: <%=$random_character.eye_color%></p>
  <p>Personality: <%=$random_character.personality%></p>


  <!-- div where the two buttons are defined -->
  <div id = "random_page">
    <form action ='/user/<%=$random_character.user_id%>' method = "GET" class = "form_buttons">
      <input type = "submit" value ="View character">
    </form>
    <p>OR</p>
    <form action = '/random' method = "GET" class = "refresh">
      <input type = "submit" value = "Create another OC">
    </form>
  </div>
</div>
